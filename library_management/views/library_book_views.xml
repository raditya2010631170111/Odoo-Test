<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Library Books">
                <field name="title"/>
                <field name="author"/>
                <field name="price"/>
                <field name="category"/>
                <field name="isbn"/>
                <field name="publication_year"/>
            </tree>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Library Books">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="author"/>
                        <field name="price"/>
                        <field name="category"/>
                        <field name="isbn" readonly="1"/>
                        <field name="publication_year" readonly="1"/>
                    </group>
                    <footer>
                        <button name="fetch_additional_details" string="Fetch Details" type="object" class="btn-secondary"/>
                        <button name="calculate_total_books_per_category" string="Calculate" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_library_root" name="Library Management" sequence"10"/>
    <menuitem id="menu_library_book" name="Books" parent="menu_library_root" sequence"10"/>
    <act_window id="action_library_book" name="Books" res_model="library.book" view_mode="tree,form" menu_id="menu_library_book"/>

</odoo>